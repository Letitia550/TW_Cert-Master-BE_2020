<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:file:./data/cert-master</property>
        <property name="connection.username">sa</property>
        <property name="connection.password">password</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">none</property>

        <mapping class="com.ibm.certmaster.models.Category"/>
        <mapping class="com.ibm.certmaster.models.Certification"/>
        <mapping class="com.ibm.certmaster.models.Role"/>
        <mapping class="com.ibm.certmaster.models.User"/>
        <mapping class="com.ibm.certmaster.models.Request"/>
    </session-factory>
</hibernate-configuration>